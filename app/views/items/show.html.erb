<h1><%= @item.name %></h1>
<p><%= @item.description %></p>
<p>Sold by <%= @item.merchant.name %></p>

<% if client_view %>
  <p><%= link_to "Click here", item_path(@item), method: "patch" %> to buy this item!</p>
<% elsif merchant_view %>
  <p><%= link_to "Click here", edit_merchant_item_path(@item) %> to edit this item.</p>
<% end %>
