<% if service.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(service.errors.count, "error") %> prevented you from creating your service:</h2>
    <ul>
    <% service.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for service do |s| %>
  <%= s.hidden_field :merchant_id %>

  <%= s.label :name %>
  <%= s.text_field :name %>
  <br>
  <%= s.label :description %>
  <%= s.text_field :description %>
  <br><br>
  <%= s.submit %>
<% end %>
