<h1>Profile page for <%= @user_account.username %></h1>
<% if current_user == @user_account %>
  <% if @user_account.merchant.nil? %>
    <p>If you want to sell something, <%= link_to "click here", merchants_path, method: "post" %></p>
  <% else %>
    <p><%= link_to "Click here", new_merchant_item_path(@user_account.merchant) %> to add a new item for sale!</p>
    <p><%= link_to "Click here", new_merchant_service_path(@user_account.merchant) %> to add a new service for sale!</p>
    <p><%= link_to "Click here", merchant_items_path(@user_account.merchant) %> to see all the items you've put up for sale!</p>
    <p><%= link_to "Click here", merchant_services_path(@user_account.merchant) %> to see all the services you've put up for sale!</p>
  <% end %>

  <% if @user_account.client.nil? %>
    <p>If you want to buy something, <%= link_to "click here", clients_path, method: "post" %></p>
  <% else %>
    <p><%= link_to "Click here", client_items_path(@user_account.client) %> to see all the items you've bought!</p>
    <p><%= link_to "Click here", client_services_path(@user_account.client) %> to see all the services you've bought!</p>
  <% end %>

  <p><%= link_to "Log out", logout_path %></p>
  
<% else %>
  <p><%= link_to "Click here", items_path %> to see all items for sale!</p>
  <p><%= link_to "Click here", services_path %> to see all services for sale!</p>
<% end %>
